  4)
  import React from 'react';

let user = {
firstName: "Maks",
lastName: "Korniienko"}

let userName = function(user) {return user.firstName + " " + user.lastName};
class App extends React.Component {
    render() { return <React.Fragment>
    <h1>Hello {userName(user)}!</h1>
   
</React.Fragment>
    }
  }

  export default App
