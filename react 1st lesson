2)
import React from 'react';

const isUserlog = window.confirm("Чи користувач залогований?")

class App extends React.Component {
    render() { return <React.Fragment>
    { (isUserlog == true) ? (<h1>Користувач залогований!</h1>) 
         : (<h1>Вам потрібно залогуватись!</h1>)
}
</React.Fragment>
    }
  }

  export default App
