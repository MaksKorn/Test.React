3)
import React from 'react';

let userList = ["Maks", "Vlad", "Oleg"]

class App extends React.Component {
    render() { return <React.Fragment>
    <h1>It's my users list. Its length - {userList.length}!</h1>
    <ol>
        {userList.map(user => <li>{user}</li>)}
    </ol>
</React.Fragment>
    }
  }

  export default App
